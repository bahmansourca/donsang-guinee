generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Donor {
  id              String     @id @default(cuid())
  fullName        String
  bloodGroup      String
  phone           String
  email           String?
  city            String
  region          String
  isActive        Boolean    @default(true)
  lastDonationDate DateTime?
  verified        Boolean    @default(false)
  verificationCode String?
  verificationExpiresAt DateTime?
  verificationChannel String? // SMS | EMAIL
  verificationTarget String?  // phone or email used to send
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
}

model Alert {
  id        String      @id @default(cuid())
  title     String
  content   String
  bloodGroup String
  region    String
  status    String      @default("OPEN")
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Article {
  id        String   @id @default(cuid())
  slug      String   @unique
  title     String
  body      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Hospital {
  id        String   @id @default(cuid())
  name      String
  city      String
  region    String
  phone     String?
  email     String?
  latitude  Float?
  longitude Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OutboxMessage {
  id         String         @id @default(cuid())
  channel    String
  to         String
  subject    String?
  body       String
  donorId    String?
  status     String         @default("PENDING") // PENDING | SENT | FAILED
  error      String?
  createdAt  DateTime       @default(now())
  sentAt     DateTime?
}


