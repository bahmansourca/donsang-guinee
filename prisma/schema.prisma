generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum BloodGroup {
  O_POS
  O_NEG
  A_POS
  A_NEG
  B_POS
  B_NEG
  AB_POS
  AB_NEG
}

enum Region {
  CONAKRY
  BOKE
  KINDIA
  MAMOU
  LABE
  FARANAH
  KANKAN
  NZEREKORE
}

enum AlertStatus {
  OPEN
  RESOLVED
  CANCELLED
}

enum MessageChannel {
  SMS
  EMAIL
}

model Donor {
  id              String     @id @default(cuid())
  fullName        String
  bloodGroup      BloodGroup
  phone           String
  email           String?
  city            String
  region          Region
  isActive        Boolean    @default(true)
  lastDonationDate DateTime?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
}

model Alert {
  id        String      @id @default(cuid())
  title     String
  content   String
  bloodGroup BloodGroup
  region    Region
  status    AlertStatus @default(OPEN)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Article {
  id        String   @id @default(cuid())
  slug      String   @unique
  title     String
  body      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Hospital {
  id        String   @id @default(cuid())
  name      String
  city      String
  region    Region
  phone     String?
  email     String?
  latitude  Float?
  longitude Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OutboxMessage {
  id         String         @id @default(cuid())
  channel    MessageChannel
  to         String
  subject    String?
  body       String
  donorId    String?
  status     String         @default("PENDING") // PENDING | SENT | FAILED
  error      String?
  createdAt  DateTime       @default(now())
  sentAt     DateTime?
}


